{
  "manifest_version": 3,
  "name": "Tab-Fumes",
  "description": "Invisible air-quality oracle (clean vs dirty) via CPU throttling",
  "version": "0.0.1",
  "background": { "service_worker": "bg.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "alarms","activeTab"],
  "host_permissions": [],
  "action": {}
}